<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Characteristic</th>
				<th>Variation</th>
			</tr>
		</thead>
		<% @user_phenotypes.each do |p| %>
		<tr>
			<td><%= link_to Phenotype.find_by_id(p.phenotype_id).characteristic, Phenotype.find_by_id(p.phenotype.id) %></td>
			<td><% if p.variation %><%= p.variation%><% else %>Undescribed.<% end %></td>
		</tr>
		<% end %>
	</table>
</div>
