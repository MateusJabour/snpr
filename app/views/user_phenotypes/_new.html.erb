<%= form_for(phenotype.user_phenotypes.new,:url => {:controller => :user_phenotypes, :action => :create,:js_modal => true}, :html => {:class => "form-horizontal"}) do |up| %>
  <%= up.text_field :variation, :id => "phenotype_field"+phenotype.id.to_s, class: "form-control test-modal__input-text" %>
  <%= up.hidden_field :phenotype_id, { value: phenotype.id } %>
  <p class="modal__text"><b>Phenotype Description</b>:<br><%= phenotype.description %></p>
  <p class="help-block test-modal__text">You can either enter your variation using the text-field (including auto-completion) above or just choose one of the already known variations below.</p>
  <% phenotype.known_phenotypes.each do |p| %>
  <div class="radio test-modal__radio">
    <label class="radio test-modal__text">
      <%= up.radio_button(:variation, p,) %> <%=p%>
    </label>
  </div>
  <% end %>
  <%= up.submit "Save", :class => "btn btn-default test-modal__save-button" %>
<% end %>

<% content_for id.to_sym do %>
  <h3 class="modal__text">What is your variation at phenotype <em><%=phenotype.characteristic%></em>?</h3>
<% end %>
